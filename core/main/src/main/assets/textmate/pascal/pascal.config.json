{
  "comments": {
    "lineComment": "//",
    "blockComment": ["{", "}"]
  },
  "brackets": [
    ["{", "}"],
    ["(*", "*)"],
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(*", "close": "*)" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["(*", "*)"],
    ["(", ")"],
    ["[", "]"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\{\\$REGION\\b",
      "end": "^\\s*\\{\\$ENDREGION\\b"
    }
  }
}
